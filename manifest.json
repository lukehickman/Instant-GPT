{
  "manifest_version": 3,
  "name": "InstantGPT - ChatGPT Powered Assistant",
  "version": "1.3",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      }
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_security_policy": {}
}